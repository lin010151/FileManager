<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_announcement"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_horizontal_margin"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/announcement_normal_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/card_announcement_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:gravity="center|start"
                android:padding="@dimen/nav_header_vertical_spacing"
                android:textAppearance="?android:attr/textAppearanceLarge"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/card_announcement_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/announcement_normal_head"
            android:ellipsize="end"
            android:maxLines="2"
            android:padding="16dp"
            android:textAppearance="?android:attr/textAppearanceSmall"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_announcement_hint"
            android:orientation="horizontal">

            <Button
                android:id="@+id/card_announcement_btn_more"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/card_btn_more_announcement"
                android:textColor="@color/colorAccent"/>
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>